<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >

    <ImageView
            android:id="@+id/main_imageFondo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/main_cadiz"
            android:scaleType="centerCrop"
            />

    <ImageView
            android:layout_height="fill_parent"
            android:layout_width="190dp"
            android:background="@drawable/gradient_main"
            />

    <TextView
            android:id="@+id/main_Itinerario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_itinerario"
            android:drawableTop="@drawable/selector_icon_itinerario"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:maxWidth="80dp"
            android:minWidth="80dp"
            />

    <TextView
            android:id="@+id/main_tv_onlive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_onLive"
            android:drawableTop="@drawable/selector_icon_on_live"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:maxWidth="80dp"
            android:minWidth="80dp"
            android:layout_below="@id/main_Itinerario"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/main_AcercaDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_acercade"
            android:drawableTop="@drawable/selector_icon_acercade"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true"
            android:maxWidth="80dp"
            android:minWidth="80dp"
            />


</RelativeLayout>
